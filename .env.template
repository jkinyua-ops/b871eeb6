# Database Configuration
DB_SERVER=your-db-server.database.windows.net
DB_USER=your_db_username
DB_PASSWORD=your_strong_password
DB_NAME_DATALOAD=Nostra_Dataload
DB_NAME_TASKS=Nostra_Dataload_Tasks

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-app.com

# Logging
LOG_LEVEL=Information

# Connection Pooling
DB_MAX_POOL_SIZE=100
DB_MIN_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD_MS=3000